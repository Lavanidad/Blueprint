<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8.0dp"
    android:layout_marginStart="8.0dp">

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/cv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.0sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="13.0dp"
            android:layout_marginBottom="13.0dp"
            android:text="设置"
            android:layout_marginStart="16.0dp"/>


        <LinearLayout
            android:layout_marginBottom="13.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="5.0dp"
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:background="@android:color/transparent"
                android:src="@drawable/set"
                />

            <LinearLayout
                android:layout_marginLeft="1.0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16.5sp"
                        android:layout_marginStart="7.5dp"
                        android:layout_centerVertical="true"
                        android:text="一键换肤"
                        android:textColor="#5F5F5F" />

                    <Switch
                        android:id="@+id/switch_day_night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
